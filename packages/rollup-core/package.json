  "license": "MIT",
  "author": "Optimism",
  "repository": {
    "type": "git",
    "url": "https://github.com/plasma-group/optimistic-rollup.git"
  },
  "dependencies": {
    "@pigi/core-db": "0.0.10-alpha.0",
    "@pigi/core-utils": "0.0.10-alpha.0",
    "async-lock": "^1.2.2",
    "ethers": "^4.0.39"
  },
  "devDependencies": {
    "@types/abstract-leveldown": "^5.0.1",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.7",
