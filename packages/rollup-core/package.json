{
  "name": "@pigi/rollup-core",
  "version": "0.0.10-alpha.0",
  "description": "[Optimism] Optimistic Rollup Core Library",
  "main": "build/index.js",
  "files": [
    "build/**/.js"
  ],
  "scripts": {
    "all": "yarn clean && yarn build && yarn fix && yarn lint && yarn test",
